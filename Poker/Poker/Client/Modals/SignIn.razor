@inject IModalService ModalService
@inherits SignInBase

    <EditForm Model="@User" OnValidSubmit="@CreateAccount">
        <DataAnnotationsValidator />
        <ValidationSummary />
        @if (ShowErrors)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in Errors)
                {
                    <p>@error</p>
                }
            </div>
        }
        <hr />
        <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">
                Email
            </label>
            <div class="col-sm-9">
                <InputText id="email" class="form-control" placeholder="Email"
                           @bind-Value="User.Email" />
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-3 col-form-label">
                Password
            </label>
            <div class="col-sm-9">
                <InputText type="password" id="password" class="form-control" placeholder="Password"
                           @bind-Value="User.Password" />
            </div>
        </div>
        <div class="form-group row">
            <label for="confirmPassword" class="col-sm-3 col-form-label">
                Confirm Password
            </label>
            <div class="col-sm-9">
                <InputText type="password" id="confirmPassword" class="form-control" placeholder="Repeat Password"
                           @bind-Value="User.ConfirmPassword" />
            </div>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" Value="Confirm" />
            <button @onclick="BlazoredModal.Cancel" class="btn btn-danger">Cancel</button>
        </div>
    </EditForm>
